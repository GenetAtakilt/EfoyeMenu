<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#f5f6e5"
    tools:showIn="@layout/activity_category" tools:context="com.example.yilma.efoymenu.Category"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:src="@drawable/c"
        android:contentDescription="@string/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="35dp" />

    <Button
        android:background="@drawable/btn_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/pizza_btn"
        android:id="@+id/pizza_btn"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginLeft="37dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp" />

    <Button
        android:onClick="onClick"
        android:background="@drawable/btn_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/hot_btn"
        android:id="@+id/hot_btn"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pizza_btn"
        android:layout_alignStart="@+id/pizza_btn"
        android:layout_marginBottom="45dp" />

    <Button
        android:onClick="onClick"
        android:background="@drawable/btn_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/salad_btn"
        android:id="@+id/salad_btn"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginRight="39dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp" />

    <Button
        android:background="@drawable/btn_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/shots_btn"
        android:id="@+id/shots_btn"
        android:textSize="18sp"
        android:onClick="onClick"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/salad_btn"
        android:layout_alignStart="@+id/salad_btn"
        android:layout_marginBottom="45dp" />


</RelativeLayout>
